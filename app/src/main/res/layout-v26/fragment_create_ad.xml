<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.CreateAdFragment"
    android:id="@+id/container"
    tools:layout_editor_absoluteY="25dp">

    <EditText
        android:id="@+id/title_of_adv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/textview_background"
        android:padding="10dp"
        android:autofillHints="@string/title_hint"
        android:textColor="#000000"
        android:textSize="16sp"
        android:hint="@string/title_hint"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/short_of_adv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/short_of_adv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/textview_background"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:autofillHints="@string/short_description"
        android:inputType="text"
        android:hint="@string/short_description"
        app:layout_constraintBottom_toTopOf="@+id/long_of_adv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_of_adv" />

    <EditText
        android:id="@+id/long_of_adv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:autofillHints="@string/long_description"
        android:inputType="text"
        android:layout_marginBottom="8dp"
        android:background="@drawable/textview_background"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:hint="@string/long_description"
        app:layout_constraintBottom_toTopOf="@+id/phone_of_adv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/short_of_adv" />

    <EditText
        android:id="@+id/phone_of_adv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/textview_background"
        android:padding="10dp"
        android:textColor="#000000"
        android:inputType="phone"
        android:textSize="16sp"
        android:autofillHints="@string/phone_number"
        android:hint="@string/phone_number"
        app:layout_constraintBottom_toTopOf="@+id/location_of_adv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/long_of_adv" />

    <EditText
        android:id="@+id/location_of_adv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/textview_background"
        android:padding="10dp"
        android:autofillHints="@string/location"
        android:textColor="#000000"
        android:textSize="16sp"
        android:inputType="text"
        android:hint="@string/location"
        app:layout_constraintBottom_toTopOf="@+id/picked_image_pager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_of_adv" />


    <android.support.v4.view.ViewPager
        android:id="@+id/picked_image_pager"
        android:layout_width="232dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/add_image_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        android:contentDescription="@string/details_content_desc"
        android:focusable="true"
        android:src="@drawable/ic_add_black_24dp"
        app:layout_constraintEnd_toStartOf="@+id/picked_image_pager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/location_of_adv" />

    <Button
        android:id="@+id/upload_advert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/upload"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/picked_image_pager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_image_logo" />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="invisible"
        android:indeterminateDrawable="@drawable/my_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>